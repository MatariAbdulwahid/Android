<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray"
              android:orientation="vertical"
              android:weightSum="100"

               >

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="20"
                  tools:ignore="Suspicious0dp">
    <EditText
            android:id="@+id/etShowNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:paddingTop="10pt"
            android:textColor="@color/white"
            android:textSize="40sp"

            tools:text="0" />
    </LinearLayout>

    <TableLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"

    >

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:id="@+id/button10"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnClean"
                    android:text="AC"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/buPlusMins"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnNumberEvent"
                    android:text="+/-"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/button8"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnPercent"
                    android:text="%"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/buDiv"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/buop"
                    android:onClick="btnOpEevent"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu7"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnNumberEvent"
                    android:text="7"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu8"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnNumberEvent"
                    android:text="8"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu9"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnNumberEvent"
                    android:text="9"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/buMul"
                    android:layout_width="wrap_content"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/buop"
                    android:onClick="btnOpEevent"
                    android:text="*"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu4"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnNumberEvent"
                    android:text="4"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu5"
                    android:layout_width="wrap_content"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnNumberEvent"
                    android:text="5"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu6"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnNumberEvent"
                    android:text="6"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/buSub"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/buop"
                    android:onClick="btnOpEevent"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu1"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnNumberEvent"
                    android:text="1"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu2"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnNumberEvent"
                    android:text="2"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu3"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="btnNumberEvent"
                    android:text="3"
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/buSum"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/buop"
                    android:onClick="btnOpEevent"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
        </TableRow>


        <TableRow

                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu0"
                    android:layout_width="60pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"

                    android:onClick="btnNumberEvent"
                    android:text="0"
                    android:textSize="18sp"/>

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/buDot"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"

                    android:onClick="btnNumberEvent"
                    android:text="."
                    android:textSize="18sp"/>

            <Button
                    android:id="@+id/button1"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:background="@color/buop"

                    android:onClick="btnEqualEvent"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>