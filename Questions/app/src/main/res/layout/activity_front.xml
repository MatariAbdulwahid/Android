<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".front"
        android:background="@drawable/backgr"
>


    <Button
            android:layout_width="@dimen/btn_que_width"
            android:layout_height="@dimen/btn_que_height"
            android:inputType="text"
            android:id="@+id/btnQues"
            android:text="@string/btn_que"
            android:textColor="@color/LemonChiffon"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/btn_que"
            android:layout_marginTop="252dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/state_font"


    />

    <Button
            android:layout_width="@dimen/btn_que_width"
            android:layout_height="@dimen/btn_que_height"
            android:inputType="text"
            android:id="@+id/btnRateApp"
            android:text="@string/btn_rate"
            android:textColor="@color/LemonChiffon"
            android:layout_below="@+id/btnQues"
            android:layout_marginTop="158dp"
            android:textSize="@dimen/btn_rate"

            android:layout_centerInParent="true"
            android:background="@drawable/state_font"
    />

</RelativeLayout>